@using Sparks_Task_1.Models
@model TransactionVM
<div style="background-image: url(/img/22.jpg);background-repeat: no-repeat;background-size: cover;height: 41.3rem;">
    <div class="mx-auto " style="width:40rem;background: #fff;top: 22%;left: 34%;position: absolute;height: 63%; border: 5px solid #2a4a6a; border-radius:20px">
        <h1 style="margin-top: 5rem;text-align: center;font-weight: 900;color: #2a4a6a;">@ViewBag.cusList.Name Information</h1>
        <label for="name" style="color:#2a4a6a;margin-top: 4rem;margin-left: 5rem;margin-right: 8rem;font-size: x-large;font-weight: bold;">Name</label>
        <input value="@ViewBag.cusList.Name" id="name" class="w-50" type="text"  disabled style="border-color: #2a4a6a;text-align: center;margin-bottom: 30px;border-radius: 6px;background-color: white;color: #2a4a6a;"/>
        <br />
        <label for="email" style="color:#2a4a6a;margin-left: 5rem;margin-right: 8.4rem;font-size: x-large;font-weight: bold;">Email</label>
        <input value="@ViewBag.cusList.Email" id="email" class="w-50" type="text"  disabled style="border-color: #2a4a6a;text-align: center;margin-bottom: 30px;border-radius: 6px;background-color: white;color: #2a4a6a;"/>
        <br />
        <label for="balance" style="color:#2a4a6a;margin-left: 5rem;margin-right: 6.8rem;font-size: x-large;font-weight: bold;">Balance</label>
        <input value="@ViewBag.cusList.Balance" id="balance" class="w-50" type="text"  disabled style="border-color: #2a4a6a;text-align: center;margin-bottom: 30px;border-radius: 6px;background-color: white;color: #2a4a6a;"/>
        <br />
        <button style="background-color: #2a4a6a;color: white;font-weight: bold;border-radius: 8px;margin-left: 10rem;width: 23rem;" id="view">Transfer Money</button>
    </div>
</div>
<div style="background:rgba(0,0,0,0.8);height:100%;width:100%; position:absolute; top:0;left:0; display:none;" id="div-view">
    <form asp-action="CusInfo" asp-controller="Home" method="post" class="mx-auto " style="width:24rem;background: #fff;top: 22%;left: 43%;position: absolute;height: 42%; border: 5px solid #2a4a6a; border-radius:20px">
        <h2 style="font-weight: 700;color: #2a4a6a;text-align:center;margin-top:3rem">Transfer Money</h2>
        <label style="display:block;color:#2a4a6a;margin-top: 1rem;margin-left: 2rem;margin-right: 2rem;font-size: larger;font-weight: bold;" for="name">Customer</label>
        <div class="input-box" style="margin-left: 2rem;width: 18rem;border-radius: 6px;background-color: white;color: #2a4a6a;text-align: center;">
            <select asp-for="Reciever" class=" details input-box" style="width: 18rem;border-radius: 6px;background-color: white;color: #2a4a6a;text-align: center;">
                <option class="details" selected>Choose Customer </option>
                @foreach(var item in ViewBag.customer){
                    @if (item.Id != @ViewBag.cusList.Id)
                    {
                        <option value="@item.Name">@item.Name</option>
                    }
                }
                
            </select> 
        </div>
        <br />
        <label style="display:block;color:#2a4a6a;margin-top: 1rem;margin-left: 2rem;margin-right: 2.3rem;font-size: larger;font-weight: bold;" for="email">Amount</label>
        <input  asp-for="Amount" style="margin-left: 2rem;width: 18rem;border-radius: 6px;background-color: white;color: #2a4a6a;text-align: center;" id="name"  type="text"/>

        <br />
        
        <button style="margin-top: 1rem;background-color: #2a4a6a;color: white;font-weight: bold;border-radius: 8px;margin-left: 8rem;width: 8rem;">Transfer</button>
        <div style="position:absolute;top:-20%;left:130%;color:#fff;" id="close">
            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
            </svg>
        </div>
    </form>
</div>
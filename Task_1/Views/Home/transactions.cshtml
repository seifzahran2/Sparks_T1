	<link rel="stylesheet" type="text/css" href="~/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/css/main.css">
<!--===============================================================================================-->
</head>
<body>
	
<div class="limiter" >
	
	<div class="container-table100">

		<div class="wrap-table100">
			<div class="table100">
				<h1 style="text-align: center;color: white;font-weight: bold;font-size: xxx-large;margin-bottom: 1rem;margin-top: -1rem;">Customers List</h1>
				<table>
					<thead>
						<tr class="table100-head" style="height: 58px;line-height:3.2" >
							<th class="column2"style="color:white;text-align: center;line-height:3.2">Sender</th>
							<th class="column3"style="color:white;text-align: center;line-height:3.2">Receiver</th>
							<th class="column4"style="color:white;text-align: center;line-height:3.2">Amount</th>
						</tr>
					</thead>
					<tbody>
						
						@foreach(var item in Model){
							<tr style="line-height:3.2" as>
								<td class="column1" style="text-align:center">@item.Sender</td>
								<td class="column2" style="text-align:center">@item.Receiver</td>
								<td class="column3" style="text-align:center">@item.Amount</td>
							</tr>
						}
					</tbody>
				</table>
				
			</div>
			
		</div>
	</div>
</div>


	

<!--===============================================================================================-->	
	<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>

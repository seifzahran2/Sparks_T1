<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZAHRAN BANK</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav style="background-color:#2a4a6a;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow ">
            <div class="container">
                <a style="color:white;font-weight: bold;font-size:xx-large;" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ZAHRAN BANK</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a style="color:white;font-size: 116%;margin-top: 11px;margin-left: 34rem;font-weight: bold;" class="nav-link "  asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:white;font-size: 116%;margin-top: 11px;font-weight: bold;" class="nav-link "  asp-controller="Home" asp-action="Customers">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:white;font-size: 116%;margin-top: 11px;font-weight: bold;" class="nav-link "  asp-controller="Home" asp-action="transactions">Transaction</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <main role="main" >
            @RenderBody()
        </main>

    <footer class="border-top footer text-muted" style="background-color:#2a4a6a;font-weight: bold;font-size:xx-large;">
        <div class="container" style="color:white;">
            &copy; 2022 - ZAHRAN - <a >BANK</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
